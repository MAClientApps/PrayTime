    <style name="RadioGroup" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">?accent</item>
    </style>

    <style name="Chip_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_check</item>
    </style>

    <style name="SequenceLayout">
        <item name="progressForegroundColor">?colorAccent</item>
        <item name="progressBackgroundColor">#ccc</item>
    </style>

    <style name="SequenceStep">
        <item name="anchorTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="anchorMinWidth">@dimen/sequence_anchor_min_width</item>
        <item name="anchorMaxWidth">@dimen/sequence_anchor_max_width</item>
    </style>

    <style name="titleMax" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="titleMid" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">?textNatural</item>
    </style>

    <style name="titleMin" parent="TextAppearance.Material3.TitleSmall">
