        <item name="bismillah">@drawable/bismillah_black</item>

        <item name="whiteBlack">#ffffff</item>
        <item name="blackWhite">#000000</item>
        <item name="surahName">#250000</item>
        <item name="search">#EAE5E5</item>
        <item name="searchSheet">#E6FFFFFF</item>
        <item name="accent">@color/green</item>
<!--        <item name="translitaration">#1A43A043</item>-->
        <item name="translitaration">#50EBB070</item>
        <item name="cardBack">#EFF3EE</item>
        <item name="textNatural">#80000000</item>
