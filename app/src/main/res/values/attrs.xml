<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation" />
    </declare-styleable>

    <declare-styleable name="SunriseSunsetView">
        <!-- Track color -->
        <attr name="ssv_track_color" format="color|reference" />
        <!-- Track width -->
        <attr name="ssv_track_width" format="dimension" />

        <!-- Sun radius -->
        <attr name="ssv_sun_radius" format="dimension" />
        <!-- Sun color -->
        <attr name="ssv_sun_color" format="color|reference" />

        <!-- Shadow color -->
        <attr name="ssv_shadow_color" format="color|reference" />

        <!-- Label text size -->
        <attr name="ssv_label_text_size" format="dimension" />
        <!-- Label text color -->
        <attr name="ssv_label_text_color" format="color|reference" />
        <!-- Label vertical offset -->
        <attr name="ssv_label_vertical_offset" format="dimension" />
        <!-- Label horizontal gap -->
        <attr name="ssv_label_horizontal_offset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalCalendarView">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="SequenceLayout">
        <attr name="progressForegroundColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SequenceStep">
        <attr name="anchor" format="string" />
        <attr name="anchorTextAppearance" format="reference" />
        <attr name="title" format="string" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="subtitle" format="string" />
        <attr name="subtitleTextAppearance" format="reference" />
        <attr name="active" format="boolean" />
        <attr name="anchorMinWidth" format="dimension" />
        <attr name="anchorMaxWidth" format="dimension" />
    </declare-styleable>

    <attr name="banner" format="reference" />
    <attr name="bismillah" format="reference" />

    <attr name="whiteBlack" format="color" />
    <attr name="blackWhite" format="color" />
    <attr name="surahName" format="color" />
    <attr name="accent" format="color" />
    <attr name="search" format="color" />
    <attr name="searchSheet" format="color" />
    <attr name="translitaration" format="color" />
    <attr name="cardBack" format="color" />
    <attr name="textNatural" format="color" />
    <declare-styleable name="AppWidgetAttrs">
        <attr name="appWidgetPadding" format="dimension" />
        <attr name="appWidgetInnerRadius" format="dimension" />
        <attr name="appWidgetRadius" format="dimension" />
    </declare-styleable>


</resources>